@model QuantU.Models.Portfolio

@{
  ViewData["Title"] = "Portfolio Page";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
<div class="container text-center mt-5">
  <div class="text-center">
    <h1 class="display-4">@ViewBag.PortfolioName</h1>
  </div>

  <style>
    div.scroll {
      background-color: #fed9ff;
      width: 600px;
      height: 150px;
      overflow-x: hidden;
      overflow-y: auto;
      text-align: center;
      padding: 20px;
    }
  </style>

  <br>
  <br>

  <style>
    .row {
      display: flex;
      justify-content: space-between;
    }
  </style>

  <div class="row">
    @* <div class="scroll col me-5"> *@
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Stock Ticker</th>
            <th scope="col">Number of Shares</th>
          </tr>
        </thead>
        <tbody>
          @for (int i = 0; i < ViewBag.portfolio.stocks.Count; i++)
          {
            <tr>
              <th scope="row">@i</th>
              <td>@ViewBag.portfolio.stocks[i]</td>
              <td>@ViewBag.portfolio.share[i]</td>
            </tr>
          }
        </tbody>
      </table>
    @* </div> *@

    <div class="card w-50">
      <div class="card-body">
        <h5 class="card-title">Your Progress</h5>
        <p class="card-text">% Up/Down = xxx</p>
        <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg"
          role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Graph
            goes here</text>
        </svg>
      </div>

    </div>
  </div>

  <br>
  <br>

  <form asp-action="AddStock">
    <input asp-for="name" type="hidden" value="@ViewBag.PortfolioName" class="form-control">
    <button type="submit">
      Add Stocks
    </button>
  </form>
</div>
