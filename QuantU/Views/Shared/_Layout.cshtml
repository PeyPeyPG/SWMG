<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] QuantU</title>

    @* CSS sheets from bootstrap library *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuantU.styles.css" asp-append-version="true" />

    @* Custom style sheet *@
    <link rel="stylesheet" href="~/css/body.css" asp-append-version="true"/>
    @Html.Partial("_Favicons")
</head>

<body>

    <header>

      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow"
          style="background: #C9AAFF">
          <div class="container-fluid">

            @* Logo *@
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/QuantULogo.png" alt="" height="75px">
            </a>

            @* All nav items *@
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
              <ul class="navbar-nav flex-grow-1 justify-content-end me-4">
                @* Home *@
                <li class="nav-item">
                    <a class="nav-link text-light fs-5" asp-area="" asp-controller="Home"
                        asp-action="Index">Home</a>
                </li>
                @* Paper Trading *@
                <li class="nav-item">
                    <a class="nav-link text-light fs-5" asp-area="" asp-controller="Home"
                        asp-action="PaperTrading">Paper Trading</a>
                </li>
                @* User Quiz *@
                <li>
                    <a class="nav-link text-light fs-5" asp-area="" asp-controller="User"
                        asp-action="UserQuiz">User Quiz</a>
                </li>
              </ul>

              @* Account and Sign Out*@
              <div class="btn-group ms-auto">
                  <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-bs-toggle="dropdown"
                      aria-expanded="false" style="background-color: #C9AAFF;">
                      Account
                  </button>
                  <ul class="dropdown-menu">
                      <li><a class="dropdown-item" asp-controller="User"
                          asp-action="Account">Account info</a></li>
                      <li><a class="dropdown-item" asp-controller="User"
                          asp-action="LogOut">Sign out</a></li>
                  </ul>
              </div>
            </div>
          </div>
      </nav>
    </header>

    @* Where all the other pages will load *@
    <main role="main" class="mb-3">
        @RenderBody()
    </main>

  @* Footer *@
  <footer class="text-lg-start bg-light text-black footer mt-5" style="margin-top: 50px;">
    <section class="d-flex justify-content-center pt-4 ps-5 pe-4 border-bottom container">
      @* Items on left side *@
      <h3 class="col fw-bold start-0 text-md-start">Investment For The People</h3>
      @* Item on right side *@
      <div class="col end-0 bottom-0 text-md-end">
        @* Phone number*@
        <h6>
